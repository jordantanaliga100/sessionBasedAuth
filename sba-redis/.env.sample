# ========================
# ðŸ“¦ Application Settings
# ========================
PORT=5000
NODE_ENV=development

# Choose ONE authentication mode:
# session | session_redis | token
AUTH_MODE=session_redis

# ========================
# ðŸ”µ PostgreSQL Configuration
# ========================
# ðŸ”¹ Connection URI (for tools like Prisma, TypeORM, etc.)
POSTGRES_CONN_STRING=postgresql://postgres:secret@postgres-docker:5432/mydb

# ðŸ”¹ Standard Postgres environment variables (for pg driver)
PGHOST=postgres-docker
PGPORT=5432
PGUSER=postgres
PGPASSWORD=secret
PGDATABASE=mydb

# ðŸ”¹ Object-based config (for fallback/manual use)
POSTGRES_DB_HOST=postgres-docker
POSTGRES_DB_PORT=5432
POSTGRES_DB_USER=postgres
POSTGRES_DB_PASS=secret
POSTGRES_DB_NAME=mydb

# ========================
# ðŸŸ¡ MySQL Configuration (optional)
# ========================
# Example only â€” comment out if not used
MYSQL_CONN_STRING=mysql://root:secret@mysql-docker:3306/mydb
MYSQL_DB_HOST=mysql-docker
MYSQL_DB_PORT=3306
MYSQL_DB_USER=root
MYSQL_DB_PASS=secret
MYSQL_DB_NAME=mydb

# ========================
# ðŸŸ¢ Redis Configuration
# ========================
REDIS_HOST=redis-docker
REDIS_PORT=6379

# ========================
# ðŸŸ£ MongoDB Configuration (optional)
# ========================
# Example only â€” comment out if not used
MONGODB_CONN_STRING=mongodb://root:secret@mongo-docker:27017/mydb?authSource=admin
MONGO_DB_HOST=mongo-docker
MONGO_DB_PORT=27017
MONGO_DB_USER=root
MONGO_DB_PASS=secret
MONGO_DB_NAME=mydb

# ========================
# ðŸ”’ Secrets and Security
# ========================
SESSION_SECRET=supersecret
SESSION_COOKIE_NAME=session_id
SESSION_EXPIRES_IN_MINUTES=30
JWT_SECRET=myjwtsecret123
API_KEY=myapikey123
